@model IEnumerable<RapidChef.Models.Recipe>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.recipeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.postedByuser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.datePosted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tag1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tag2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tag3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ingrIDs)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.recipeName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.postedByuser)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.datePosted)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tag1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tag2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tag3)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.description)
    </td>
    <td>
        @* Print all ingredients *@
        @foreach (string ingr in item.ingrIDs)
        {
            if (!ingr.IsEmpty())
            {
                @ingr
                <br />
            }
        }
    </td>
    <td>
        <a href='@Url.Action("Details", "Recipe", new { id = item.recipeID})' class="btn btn-default">View Recipe</a>
        @*@Html.ActionLink("View Recipe", "Details", new { id = item.recipeID })*@
    </td>
</tr>
}

</table>
